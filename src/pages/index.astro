---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    name: 'Playbox AI',
    url: 'https://plbx.ai',
    desc: 'Built the AI agent pipeline and internal tooling from zero. Hired and leading a team of 10+ engineers.',
  },
  {
    name: 'Onmi',
    url: 'https://onmi.io',
    desc: 'AR geolocation RPG. Grew to 200K MAU as Tech Lead. Cut build size 65%, moved the team to analytics-driven experiments.',
  },
  {
    name: 'Magic Kids',
    url: 'https://magickids.me',
    desc: 'Multiplayer 3D game for kids. Led architecture pivot, shipped 10+ features, built CI/CD and review culture.',
  },
  {
    name: 'Xsite',
    url: 'https://xsite.com',
    desc: 'AI self-guided tours with AR. First engineer, built end-to-end, hired the team.',
  },
  {
    name: 'HSE AR Navigation',
    url: 'https://youtu.be/x0YYQIk13RM',
    desc: 'First Russian markerless AR navigation app for a university campus. First raised capital for development as a student.',
  },
];

const sideProjects = [
  {
    name: 'meetfuse',
    url: 'https://meetfuse.pavelsamoylenko.com',
    desc: 'Telegram bot for instant video meetings. One command to spin up a Google Meet, Zoom, or Yandex Telemost room.',
  },
  {
    name: 'hyprnote',
    url: 'https://github.com/fastrepl/hyprnote',
    desc: 'Speaker diarization, multi-session transcript export.',
  },
  {
    name: 'GeospatialCreatorDemos',
    url: 'https://github.com/dilmerv/GeospatialCreatorDemos',
    desc: 'Build pipeline automation.',
  },
];

const links = [
  { name: 'LinkedIn', url: 'https://linkedin.com/in/pavel-samoylenko' },
  { name: 'GitHub', url: 'https://github.com/pavelsamoylenko' },
  { name: 'Playbox AI', url: 'https://plbx.ai' },
];
---

<Layout title="Pavel Samoylenko">
  <main>
    <header class="hero">
      <h1>Pavel Samoylenko</h1>
      <p class="role">CTO & Co-founder at <a href="https://plbx.ai">Playbox AI</a></p>
      <p class="bio">
        Building an AI production system that generates playable ads and game prototypes 10× faster.
        10 years of technical leadership in game development and interactive tech. Shipped AR/VR products to 200K+ users.
      </p>
    </header>

    <section class="section">
      <h2>Projects</h2>
      <ul class="project-list">
        {projects.map((p) => (
          <li class="project-item">
            <div class="project-header">
              <a href={p.url} class="project-name" target="_blank" rel="noopener">{p.name}</a>
              <span class="arrow">↗</span>
            </div>
            <p class="project-desc">{p.desc}</p>
          </li>
        ))}
      </ul>
    </section>

    <section class="section">
      <h2>Side Projects & OSS</h2>
      <ul class="project-list">
        {sideProjects.map((p) => (
          <li class="project-item">
            <div class="project-header">
              <a href={p.url} class="project-name" target="_blank" rel="noopener">{p.name}</a>
              <span class="arrow">↗</span>
            </div>
            <p class="project-desc">{p.desc}</p>
          </li>
        ))}
      </ul>
    </section>

    <footer class="section links-section">
      <h2>Links</h2>
      <div class="links">
        {links.map((l) => (
          <a href={l.url} class="link-pill" target="_blank" rel="noopener">{l.name}</a>
        ))}
      </div>
    </footer>
  </main>
</Layout>

<style>
  main {
    max-width: 640px;
    margin: 0 auto;
    padding: 4rem 1.5rem 6rem;
  }

  .hero {
    margin-bottom: 4rem;
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    letter-spacing: -0.03em;
    line-height: 1.2;
    margin-bottom: 0.5rem;
  }

  .role {
    font-size: 1rem;
    color: var(--text-muted);
    margin-bottom: 1.25rem;
  }

  .role a {
    color: var(--text);
    font-weight: 500;
  }

  .bio {
    color: var(--text-muted);
    font-size: 0.95rem;
    line-height: 1.75;
  }

  .section {
    margin-bottom: 3.5rem;
  }

  h2 {
    font-size: 0.8rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .project-list {
    list-style: none;
  }

  .project-item {
    padding: 1rem 0;
    border-top: 1px solid var(--border);
  }

  .project-item:last-child {
    border-bottom: 1px solid var(--border);
  }

  .project-header {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin-bottom: 0.35rem;
  }

  .project-name {
    font-weight: 500;
    color: var(--text);
    font-size: 1rem;
  }

  .project-name:hover {
    color: var(--link-hover);
  }

  .arrow {
    font-size: 0.75rem;
    color: var(--text-muted);
    transition: transform 0.2s ease;
  }

  .project-item:hover .arrow {
    transform: translate(2px, -2px);
  }

  .project-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .link-pill {
    display: inline-block;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border);
    border-radius: 999px;
    font-size: 0.85rem;
    color: var(--text-muted);
    transition: all 0.2s ease;
  }

  .link-pill:hover {
    color: var(--link-hover);
    border-color: var(--text-muted);
  }

  @media (max-width: 480px) {
    main {
      padding: 3rem 1.25rem 4rem;
    }

    h1 {
      font-size: 1.6rem;
    }

    .hero {
      margin-bottom: 3rem;
    }
  }
</style>
